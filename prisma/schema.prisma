generator client {
  provider = "prisma-client-js"
 
}
datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
   directUrl = env("DIRECT_URL")
}

model User{
  id   String @id @default(uuid())
  name String 
  email String @unique
  password String 
  avatarUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  videos Video[]
  comments Comment[]
}
model Video{
  id String @id @default(uuid())
  title String
  description String
  url String @unique
  thumbnailUrl String
  category     String
  duration Int
  userId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  author User @relation(fields: [userId], references: [id])
  comments Comment[]
}
model Comment{
  id String @id @default(uuid())
  text String
  userId String
  videoId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user User @relation(fields: [userId],references: [id])
  video Video @relation(fields:[videoId],references:[id])
}